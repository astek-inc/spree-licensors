<div data-hook="admin_user_licensor" id="admin_user_licensor_edit" class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
      <%= Spree.t('licensor') %>
    </h1>
  </div>

  <div class="panel-body">

    <div data-hook="admin_user_licensor_edit_form">
      <%= form_for [:admin, @user, @licensor], url: admin_user_licensor_path(@user) do |f| %>

          <%= f.hidden_field :user_id %>

          <div data-hook="admin_user_licensor_form_fields" class="row">
            <div class="col-md-6">
              <%= f.field_container :name, class: ['form-group'] do %>
                  <%= f.label :name, Spree.t(:name) %>
                  <%= f.text_field :name, class: 'form-control' %>
                  <%= error_message_on :user, :licensor, :name %>
              <% end %>
            </div>

            <div class="col-md-6">
              <%= f.field_container :taxon_id, class: ['form-group'] do %>
                  <%= f.label :taxon_id, Spree.t(:taxon) %>
                  <%= f.collection_select(:taxon_id, @licensor_taxons, :id, :name, { include_blank: Spree.t('match_choices.none') }, { class: 'select2' }) %>
                  <%= f.error_message_on :taxon_id %>
              <% end %>
            </div>
          </div>

          <div data-hook="admin_user_licensor_edit_form_button">
            <%= render partial: 'spree/admin/shared/edit_resource_links', locals: { collection_url: spree.admin_users_url } %>
          </div>
      <% end %>
    </div>

  </div>
</div>
